<div class="comments-form">
	<%= form_for([@article, @article.comments.new]) do |f| %>
<div class="field">
	<div class="field-text">
		<%= f.label :name %>
	</div>
	<div class="field-input">
		<%= f.text_field :name %>
	</div>
</div>
<div class="field">
	<div class="field-text">
		<%= f.label :body %>
	</div>
	<div class="field-input">
		<%= f.text_area :body %>
	</div>
</div>
<div class="center-button">
	<%= f.submit 'Submit' %>
</div>
<% end %>
</div>
